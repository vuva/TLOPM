[DEFAULT]

user: vuva


sender = pc52.filab.uni-hannover.de
receiver = pc50.filab.uni-hannover.de
router = pc51.filab.uni-hannover.de

[start]
host:%(receiver)s
command:killall -INT ITGRecv; ~/D-ITG-2.8.1-r1023/bin/ITGRecv -l ~/logs/outage/ditg-%(SL_EX)s-receiver-%(SL_I)s.log;

[receiver]
host:%(receiver)s
command:sudo killall -INT tcpdump; sudo tcpdump dst 10.1.1.2 and src 10.1.2.2 or 10.1.3.2 -i any -w ~/logs/outage/dump-receiver.pcapng -j adapter;
after: {'start':'ITGRecv version'}

[router]
host:%(router)s
command:killall -INT ITGRecv; ~/D-ITG-2.8.1-r1023/bin/ITGRecv -l ~/logs/outage/ditg-%(SL_EX)s-router-%(SL_I)s.log;
after: {'start':'ITGRecv version'}

[sender]
host:%(sender)s
command: sleep 10; ~/D-ITG-2.8.1-r1023/bin/ITGSend -T TCP -a 10.1.1.2 -t %(SL_EXPTIME)s000 -c 1428 -C 700 -D -l ~/logs/outage/ditg-%(SL_EX)s-sender-%(SL_I)s.log;~/D-ITG-2.8.1-r1023/bin/ITGSend -T TCP -a 10.1.2.3 -t %(SL_EXPTIME)s000 -c 1428 -U 100 800 -D -l ~/logs/outage/ditg-%(SL_EX)s-cross-%(SL_I)s.log;
after: {'start':'ITGRecv version'}

[sender-tshark]
host:%(sender)s
command:sudo killall -INT tcpdump; sudo tcpdump dst 10.1.1.2 and src 10.1.2.2 or 10.1.3.2 -i any -w ~/logs/outage/dump-sender.pcapng -j adapter;
after: {'start':'ITGRecv version'}

[cleanupRecv]
host: %(receiver)s
command: killall -INT ITGRecv; sudo killall -INT tcpdump; sudo killall -INT tshark; sudo tshark -r ~/logs/outage/dump-receiver.pcapng -l -i any -Y 'ip.dst==10.1.1.2' -T fields -e frame.number -e frame.time_epoch -e ip.src -e tcp.srcport -e ip.dst -e tcp.dstport -e ip.proto -e frame.len -e tcp.seq -e tcp.ack -e tcp.options.mptcp.rawdataseqno -e tcp.options.mptcp.rawdataack > ~/logs/outage/%(SL_EX)s-receiver-%(SL_I)s.csv ;
after: {'sender':'Finished'}

[cleanupRouter]
host: %(router)s
command: killall -INT ITGRecv;
after: {'sender':'Finished'}

[cleanupSender]
host: %(sender)s
command: sudo killall -INT tcpdump; sudo killall -INT tshark; sudo tshark -r ~/logs/outage/dump-sender.pcapng -l -i any -Y 'ip.dst==10.1.1.2'  -T fields -e frame.number -e frame.time_epoch -e ip.src -e tcp.srcport -e ip.dst -e tcp.dstport -e ip.proto -e frame.len -e tcp.seq -e tcp.ack -e tcp.options.mptcp.rawdataseqno -e tcp.options.mptcp.rawdataack > ~/logs/outage/%(SL_EX)s-sender-%(SL_I)s.csv
after: {'sender':'Finished'}
