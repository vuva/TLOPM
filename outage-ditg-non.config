[DEFAULT]

user: vuva


sender = pc22.filab.uni-hannover.de
router = pc27.filab.uni-hannover.de
receiver = pc21.filab.uni-hannover.de

[clocksync]
host:%(sender)s
command: echo "clocks synced"; 

[start]
host:%(receiver)s
command:killall -INT ITGRecv; ~/D-ITG-2.8.1-r1023/bin/ITGRecv;
after: {'clocksync':'clocks synced'}

[receiver]
host:%(receiver)s
command:sudo killall -INT tcpdump; sudo tcpdump tcp and net 10.1.1.0/24 or 10.1.2.0/24 or 10.1.3.0/24 -i any -w ~/logs/outage/dump-receiver.pcapng -j adapter;
after: {'start':'ITGRecv version'}

[sender]
host:%(sender)s
command: sleep 10; ~/D-ITG-2.8.1-r1023/bin/ITGSend -T TCP -a 10.1.1.2 -t %(SL_EXPTIME)s000
after: {'start':'ITGRecv version'}

[sender-tshark]
host:%(sender)s
command:sudo killall -INT tcpdump; sudo tcpdump tcp and net 10.1.1.0/24 or 10.1.2.0/24 or 10.1.3.0/24 -i any -w ~/logs/outage/dump-sender.pcapng -j adapter;
after: {'start':'ITGRecv version'}

[router]
host:%(router)s
command:killall -INT python3; sudo iptables -D FORWARD -i eth5 -j DROP; sudo iptables -D FORWARD -i eth2 -j DROP;sleep 15; 
after: {'start':'ITGRecv version'}


[cleanupRecv]
host: %(receiver)s
command: killall -INT ITGRecv; sudo killall -INT tcpdump; sudo killall -INT tshark; sudo tshark -r ~/logs/outage/dump-receiver.pcapng -l -i eth5 -T fields -e frame.number -e frame.time_epoch -e ip.src -e tcp.srcport -e ip.dst -e tcp.dstport -e ip.proto -e frame.len -e tcp.seq -e tcp.ack -e tcp.options.mptcp.rawdataseqno -e tcp.options.mptcp.rawdataack > ~/logs/outage/%(SL_EX)s-receiver-%(SL_I)s.csv ;echo "Iperf server down."
after: {'sender':'Finished'}

[cleanupRouter]
host: %(router)s
command: sleep 10; killall -INT python3;
after: {'sender':'Finished'}

[cleanupSender]
host: %(sender)s
command: sudo killall -INT tcpdump; sudo killall -INT tshark; sudo tshark -r ~/logs/outage/dump-sender.pcapng -l -i eth2 -i eth4 -T fields -e frame.number -e frame.time_epoch -e ip.src -e tcp.srcport -e ip.dst -e tcp.dstport -e ip.proto -e frame.len -e tcp.seq -e tcp.ack -e tcp.options.mptcp.rawdataseqno -e tcp.options.mptcp.rawdataack > ~/logs/outage/%(SL_EX)s-sender-%(SL_I)s.csv
after: {'sender':'Finished'}
